@model Vjezba21102020.Models.PrisustvoNaNastaviUrediVM

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi</h1>

<h4>PrisustvoNaNastaviUrediVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="PrisustvoNaNastaviSnimi" asp-action="Snimi" asp-controller="PrisustvoNaNastavi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="PrisustvoNaNastaviID" class="control-label"></label>
                <input asp-for="PrisustvoNaNastaviID" hidden readonly class="form-control" />
                <span asp-validation-for="PrisustvoNaNastaviID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImeStudenta" class="control-label"></label>
                <input asp-for="ImeStudenta" readonly class="form-control" />
                <span asp-validation-for="ImeStudenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazivPredmeta" class="control-label"></label>
                <input asp-for="NazivPredmeta" readonly class="form-control" />
                <span asp-validation-for="NazivPredmeta" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPrisutan" /> @Html.DisplayNameFor(model => model.IsPrisutan)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Komentar" class="control-label"></label>
                <input asp-for="Komentar" class="form-control" />
                <span asp-validation-for="Komentar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Snimi" class="btn btn-primary" onclick="PrisustvoNaNastaviSnimi()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Prikaz">Natrag na listu</a>
</div>

